<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonsimple"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_namephone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/heading"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:text="" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"></View>
            <TextView
                android:id="@+id/tv_later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:text="Later" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"></View>
            <ImageView
                android:id="@+id/iv_done"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_height="match_parent"
                android:src="@drawable/done_fingerprint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/buttonsimple"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="New Inquiry"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/tv_new_inquiry" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="General Call"
                android:id="@+id/tv_genral_call"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"></View>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_existing_inquiry"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="" />
                <TextView
                    android:id="@+id/tv_existing_count"
                    android:layout_width="wrap_content"
                    android:textColor="#ff0000"
                    android:gravity="bottom"
                    android:layout_gravity="right|top"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="" />
            </FrameLayout>

        </LinearLayout>
        <EditText
            android:layout_marginTop="2dp"
            android:id="@+id/et_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_background_normal"
            android:gravity="top|left"
            android:hint="Comment"/>

    </LinearLayout>

</LinearLayout>