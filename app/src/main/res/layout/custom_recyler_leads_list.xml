<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="15"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="13"
        android:layout_height="100dp"
        android:weightSum="10.5"
        android:id="@+id/lin_set_click"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/textclrblack"
                android:textSize="@dimen/heading"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="3M Johar Town Lahore"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/back"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="Malik Zahid"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_groupname"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:textColor="@color/back"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="Ahmed Ali"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:textColor="@color/back"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="Ahmed Ali"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/dots"
            android:id="@+id/iv_setting_dots"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/phonecall"
            android:id="@+id/iv_calls"/>
    </LinearLayout>

</LinearLayout>